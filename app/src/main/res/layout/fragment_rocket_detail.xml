<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".system.RocketDetailFragment"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:menu="@menu/rocket_detail_menu"
        tools:title="Rocket title"
        />

    <TextView
        android:id="@+id/rocket_detail_status"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="24sp"
        android:visibility="visible"
        tools:visibility="gone"
        tools:text="Loading..."
        />

    <ScrollView
        android:id="@+id/rocket_detail_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp"
        android:visibility="gone"
        tools:visibility="visible"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.compose.ui.platform.ComposeView
                android:id="@+id/rocket_detail_compose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="24dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        android:text="@string/rocket_detail_first_stage"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/rocket_detail_first_reusable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/reusable"
                        android:drawablePadding="8dp"
                        android:paddingVertical="8dp"
                        tools:text="reusable"
                        />

                    <TextView
                        android:id="@+id/rocket_detail_first_engines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/engine"
                        android:drawablePadding="8dp"
                        android:paddingVertical="8dp"
                        tools:text="9 engines"
                        />

                    <TextView
                        android:id="@+id/rocket_detail_first_fuel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/fuel"
                        android:drawablePadding="8dp"
                        android:paddingVertical="8dp"
                        tools:text="385 tons of fuel"
                        />

                    <TextView
                        android:id="@+id/rocket_detail_first_burn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/burn"
                        android:drawablePadding="8dp"
                        android:paddingVertical="8dp"
                        tools:text="burn time: 162s"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                app:cardBackgroundColor="#F5F5F5"
                app:cardCornerRadius="24dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="8dp"
                        android:text="@string/rocket_detail_second_stage"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        />

                    <TextView
                        android:id="@+id/rocket_detail_second_reusable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/reusable"
                        android:drawablePadding="8dp"
                        android:paddingVertical="8dp"
                        tools:text="reusable"
                        />

                    <TextView
                        android:id="@+id/rocket_detail_second_engines"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/engine"
                        android:drawablePadding="8dp"
                        android:paddingVertical="8dp"
                        tools:text="9 engines"
                        />

                    <TextView
                        android:id="@+id/rocket_detail_second_fuel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/fuel"
                        android:drawablePadding="8dp"
                        android:paddingVertical="8dp"
                        tools:text="385 tons of fuel"
                        />

                    <TextView
                        android:id="@+id/rocket_detail_second_burn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/burn"
                        android:drawablePadding="8dp"
                        android:paddingVertical="8dp"
                        tools:text="burn time: 162s"
                        />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="@string/rocket_detail_photos"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:paddingVertical="8dp"
                />

            <LinearLayout
                android:id="@+id/rocket_detail_photos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
